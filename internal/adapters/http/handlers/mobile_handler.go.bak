package handlers

import (
	"spsc-loaneasy/internal/adapters/persistence/models"
	"spsc-loaneasy/internal/adapters/persistence/repositories"
	"spsc-loaneasy/internal/pkg/pagination"
	"spsc-loaneasy/internal/pkg/response"

	"github.com/gofiber/fiber/v2"
	"gorm.io/gorm"
)

// MobileHandler handles mobile-optimized API endpoints
type MobileHandler struct {
	db              *gorm.DB
	mortgageRepo    *repositories.MortgageRepository
	loanTypeRepo    *repositories.LoanTypeRepository
	loanStepRepo    *repositories.LoanStepRepository
	loanDocRepo     *repositories.LoanDocRepository
	loanApptRepo    *repositories.LoanApptRepository
	transactionRepo *repositories.TransactionRepository
}

// NewMobileHandler creates a new mobile handler
func NewMobileHandler(
	db *gorm.DB,
	mortgageRepo *repositories.MortgageRepository,
	loanTypeRepo *repositories.LoanTypeRepository,
	loanStepRepo *repositories.LoanStepRepository,
	loanDocRepo *repositories.LoanDocRepository,
	loanApptRepo *repositories.LoanApptRepository,
	transactionRepo *repositories.TransactionRepository,
) *MobileHandler {
	return &MobileHandler{
		db:              db,
		mortgageRepo:    mortgageRepo,
		loanTypeRepo:    loanTypeRepo,
		loanStepRepo:    loanStepRepo,
		loanDocRepo:     loanDocRepo,
		loanApptRepo:    loanApptRepo,
		transactionRepo: transactionRepo,
	}
}

// MasterDataResponse represents all master data in one response
type MasterDataResponse struct {
	LoanTypes []models.LoanType `json:"loan_types"`
	LoanSteps []models.LoanStep `json:"loan_steps"`
	LoanDocs  []models.LoanDoc  `json:"loan_docs"`
	LoanAppts []models.LoanAppt `json:"loan_appts"`
}

// GetMasterData returns all master data in one call
// @Summary Get all master data
// @Description Get all master data (loan types, steps, docs, appts) in one API call - optimized for mobile
// @Tags Mobile
// @Accept json
// @Produce json
// @Security BearerAuth
// @Success 200 {object} response.Response
// @Failure 401 {object} response.Response
// @Router /v2/mobile/master [get]
func (h *MobileHandler) GetMasterData(c *fiber.Ctx) error {
	// Get all master data in parallel (could optimize with goroutines)
	loanTypes, err := h.loanTypeRepo.List(c.Context())
	if err != nil {
		return response.InternalServerError(c, "Failed to get loan types")
	}

	loanSteps, err := h.loanStepRepo.List(c.Context())
	if err != nil {
		return response.InternalServerError(c, "Failed to get loan steps")
	}

	loanDocs, err := h.loanDocRepo.List(c.Context())
	if err != nil {
		return response.InternalServerError(c, "Failed to get loan docs")
	}

	loanAppts, err := h.loanApptRepo.List(c.Context())
	if err != nil {
		return response.InternalServerError(c, "Failed to get loan appts")
	}

	// Convert to non-pointer slices for response
	types := make([]models.LoanType, len(loanTypes))
	for i, t := range loanTypes {
		types[i] = *t
	}

	steps := make([]models.LoanStep, len(loanSteps))
	for i, s := range loanSteps {
		steps[i] = *s
	}

	docs := make([]models.LoanDoc, len(loanDocs))
	for i, d := range loanDocs {
		docs[i] = *d
	}

	appts := make([]models.LoanAppt, len(loanAppts))
	for i, a := range loanAppts {
		appts[i] = *a
	}

	// Set cache header - master data can be cached for 1 hour
	c.Set("Cache-Control", "public, max-age=3600")

	return response.Success(c, "Master data retrieved successfully", fiber.Map{
		"master": MasterDataResponse{
			LoanTypes: types,
			LoanSteps: steps,
			LoanDocs:  docs,
			LoanAppts: appts,
		},
	})
}

// MyLoansLiteResponse represents a lightweight loan response for mobile
type MyLoansLiteResponse struct {
	ID            uint    `json:"id"`
	MembNo        string  `json:"memb_no"`
	Amount        float64 `json:"amount"`
	LoanTypeName  string  `json:"loan_type_name"`
	CurrentStep   string  `json:"current_step"`
	StepColor     string  `json:"step_color"`
	ApptDate      string  `json:"appt_date,omitempty"`
	ApptTime      string  `json:"appt_time,omitempty"`
	CreatedAt     string  `json:"created_at"`
}

// GetMyLoans returns user's loans with pagination (lite version for mobile)
// @Summary Get my loans (lite)
// @Description Get current user's loans with pagination - lightweight response for mobile
// @Tags Mobile
// @Accept json
// @Produce json
// @Security BearerAuth
// @Param page query int false "Page number" default(1)
// @Param limit query int false "Items per page" default(20)
// @Success 200 {object} response.Response
// @Failure 401 {object} response.Response
// @Router /v2/mobile/my-loans [get]
func (h *MobileHandler) GetMyLoans(c *fiber.Ctx) error {
	// Get user from context
	membNo, ok := c.Locals("membNo").(string)
	if !ok || membNo == "" {
		return response.Unauthorized(c, "User not found in context")
	}

	// Get pagination params
	params := pagination.GetParams(c)

	// Count total
	var total int64
	h.db.Model(&models.Mortgage{}).Where("memb_no = ?", membNo).Count(&total)

	// Get mortgages with pagination
	var mortgages []models.Mortgage
	err := h.db.
		Preload("LoanType").
		Preload("CurrentStep").
		Where("memb_no = ?", membNo).
		Order("created_at DESC").
		Offset(params.Offset).
		Limit(params.Limit).
		Find(&mortgages).Error

	if err != nil {
		return response.InternalServerError(c, "Failed to get loans")
	}

	// Convert to lite response
	liteLoans := make([]MyLoansLiteResponse, len(mortgages))
	for i, m := range mortgages {
		liteLoans[i] = MyLoansLiteResponse{
			ID:        m.ID,
			MembNo:    m.MembNo,
			Amount:    m.Amount,
			ApptTime:  m.ApptTime,
			CreatedAt: m.CreatedAt.Format("2006-01-02"),
		}

		if m.LoanType != nil {
			liteLoans[i].LoanTypeName = m.LoanType.Name
		}
		if m.CurrentStep != nil {
			liteLoans[i].CurrentStep = m.CurrentStep.Name
			liteLoans[i].StepColor = m.CurrentStep.Color
		}
		if m.ApptDate != nil {
			liteLoans[i].ApptDate = m.ApptDate.Format("2006-01-02")
		}
	}

	// Set private cache - user specific data
	c.Set("Cache-Control", "private, max-age=60")

	return response.Success(c, "Loans retrieved successfully", fiber.Map{
		"loans": liteLoans,
		"meta":  pagination.GetMeta(params, total),
	})
}

// MobileDashboardResponse represents dashboard data for mobile
type MobileDashboardResponse struct {
	// User info
	User UserInfo `json:"user"`

	// Summary stats
	Stats DashboardStats `json:"stats"`

	// Recent loans (max 5)
	RecentLoans []MyLoansLiteResponse `json:"recent_loans"`

	// Master data
	Master MasterDataResponse `json:"master"`
}

// UserInfo represents basic user info
type UserInfo struct {
	ID       uint   `json:"id"`
	MembNo   string `json:"memb_no"`
	Username string `json:"username"`
	FullName string `json:"full_name"`
	Role     string `json:"role"`
}

// DashboardStats represents dashboard statistics
type DashboardStats struct {
	TotalLoans     int64   `json:"total_loans"`
	PendingLoans   int64   `json:"pending_loans"`
	ApprovedLoans  int64   `json:"approved_loans"`
	TotalAmount    float64 `json:"total_amount"`
}

// GetDashboard returns aggregated dashboard data for mobile
// @Summary Get mobile dashboard
// @Description Get aggregated dashboard data in one API call - includes user info, stats, recent loans, and master data
// @Tags Mobile
// @Accept json
// @Produce json
// @Security BearerAuth
// @Success 200 {object} response.Response
// @Failure 401 {object} response.Response
// @Router /v2/mobile/dashboard [get]
func (h *MobileHandler) GetDashboard(c *fiber.Ctx) error {
	// Get user from context
	membNo, ok := c.Locals("membNo").(string)
	if !ok || membNo == "" {
		return response.Unauthorized(c, "User not found in context")
	}

	// Build response
	dashboard := MobileDashboardResponse{}

	// 1. User Info
	dashboard.User = UserInfo{
		ID:       user.ID,
		MembNo:   membNo,
		Username: user.Username,
		Role:     user.Role,
	}

	// Get full name from flommast if available
	var member models.Flommast
	if err := h.db.Where("mast_memb_no = ?", membNo).First(&member).Error; err == nil {
		dashboard.User.FullName = member.FullName
	}

	// 2. Stats
	var stats DashboardStats

	// Total loans
	h.db.Model(&models.Mortgage{}).Where("memb_no = ?", membNo).Count(&stats.TotalLoans)

	// Pending loans (step 1-4)
	h.db.Model(&models.Mortgage{}).
		Where("memb_no = ? AND current_step_id IN (1,2,3,4)", membNo).
		Count(&stats.PendingLoans)

	// Approved loans (step 5)
	h.db.Model(&models.Mortgage{}).
		Where("memb_no = ? AND current_step_id = 5", membNo).
		Count(&stats.ApprovedLoans)

	// Total amount
	h.db.Model(&models.Mortgage{}).
		Where("memb_no = ?", membNo).
		Select("COALESCE(SUM(amount), 0)").
		Scan(&stats.TotalAmount)

	dashboard.Stats = stats

	// 3. Recent Loans (max 5)
	var recentMortgages []models.Mortgage
	h.db.
		Preload("LoanType").
		Preload("CurrentStep").
		Where("memb_no = ?", membNo).
		Order("created_at DESC").
		Limit(5).
		Find(&recentMortgages)

	recentLoans := make([]MyLoansLiteResponse, len(recentMortgages))
	for i, m := range recentMortgages {
		recentLoans[i] = MyLoansLiteResponse{
			ID:        m.ID,
			MembNo:    m.MembNo,
			Amount:    m.Amount,
			ApptTime:  m.ApptTime,
			CreatedAt: m.CreatedAt.Format("2006-01-02"),
		}

		if m.LoanType != nil {
			recentLoans[i].LoanTypeName = m.LoanType.Name
		}
		if m.CurrentStep != nil {
			recentLoans[i].CurrentStep = m.CurrentStep.Name
			recentLoans[i].StepColor = m.CurrentStep.Color
		}
		if m.ApptDate != nil {
			recentLoans[i].ApptDate = m.ApptDate.Format("2006-01-02")
		}
	}
	dashboard.RecentLoans = recentLoans

	// 4. Master Data
	loanTypes, _ := h.loanTypeRepo.List(c.Context())
	loanSteps, _ := h.loanStepRepo.List(c.Context())
	loanDocs, _ := h.loanDocRepo.List(c.Context())
	loanAppts, _ := h.loanApptRepo.List(c.Context())

	types := make([]models.LoanType, len(loanTypes))
	for i, t := range loanTypes {
		types[i] = *t
	}

	steps := make([]models.LoanStep, len(loanSteps))
	for i, s := range loanSteps {
		steps[i] = *s
	}

	docs := make([]models.LoanDoc, len(loanDocs))
	for i, d := range loanDocs {
		docs[i] = *d
	}

	appts := make([]models.LoanAppt, len(loanAppts))
	for i, a := range loanAppts {
		appts[i] = *a
	}

	dashboard.Master = MasterDataResponse{
		LoanTypes: types,
		LoanSteps: steps,
		LoanDocs:  docs,
		LoanAppts: appts,
	}

	// Set private cache - user specific data, short cache
	c.Set("Cache-Control", "private, max-age=60")

	return response.Success(c, "Dashboard retrieved successfully", fiber.Map{
		"dashboard": dashboard,
	})
}
